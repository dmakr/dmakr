{
  "extends": [
    "airbnb-base",
    "plugin:prettier/recommended",
    "plugin:json/recommended"
  ],
  "env": {
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "rules": {
    "prettier/prettier": "error",
    "linebreak-style": ["error", "unix"],
    "no-await-in-loop": "off",
    "import/extensions": ["error", "ignorePackages"]
  }
}
